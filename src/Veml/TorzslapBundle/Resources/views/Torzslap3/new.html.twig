{% extends 'VemlHelloBundle::base.html.twig' %}

{% block body %}
<h1>Új törzslap felvétele</h1>

<form action="{{ path('3_sz_torzslap_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">

    <div class="control-group">
        <label class="control-label">1. A törzslap jele:</label>
        <div class="controls">
            P-3
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">2. Forráshely (oldalig):</label>
        <div class="controls">
            {{ form_errors(form.forrashely_kot) }}
            {{ form_errors(form.forrashely_op) }}

            {{ form_widget(form.forrashely_kot, {'attr': {'class': 'input-mini'}}) }} köt.;
            {{ form_widget(form.forrashely_op, {'attr': {'class': 'input-mini'}}) }} op.
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">3. Jelzet (folyószámig):</label>
        <div class="controls">
            {{ form_errors(form.jelzet_tanev) }}
            {{ form_errors(form.jelzet_fsz) }}

            {{ form_widget(form.jelzet_tanev, {'attr': {'class': 'input-mini'}}) }}:{{ form_widget(form.jelzet_fsz, {'attr': {'class': 'input-mini'}}) }}
            tanév; fsz.
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">4. A növendék neve (szab.):</label>
        <div class="controls">
            {{ form_errors(form.novendek_neve_szab) }}
            {{ form_widget(form.novendek_neve_szab, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">5. A növendék neve (írva):</label>
        <div class="controls">
            {{ form_errors(form.novendek_neve_irva) }}
            {{ form_widget(form.novendek_neve_irva, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">6. A növendék szül. helye (szab.):</label>
        <div class="controls">
            {{ form_errors(form.novendek_szul_helye_szab) }}
            {{ form_widget(form.novendek_szul_helye_szab, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">7. A növendék szül. helye (írva):</label>
        <div class="controls">
            {{ form_errors(form.novendek_szul_helye_irva) }}
            {{ form_widget(form.novendek_szul_helye_irva, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">8. A növendék szül. ideje:</label>
        <div class="controls">
            {{ form_errors(form.novendek_szul_ideje_ev) }}
            {{ form_errors(form.novendek_szul_ideje_ho) }}
            {{ form_errors(form.novendek_szul_ideje_nap) }}

            {{ form_widget(form.novendek_szul_ideje_ev, {'attr': {'class': 'input-mini', 'size': 4}}) }}.{{ form_widget(form.novendek_szul_ideje_ho, {'attr': {'class': 'input-mini', 'size': 2}}) }}.{{ form_widget(form.novendek_szul_ideje_nap, {'attr': {'class': 'input-mini', 'size': 2}}) }} év, hó, nap
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">9. A gondviselő neve (szab.):</label>
        <div class="controls">
            {{ form_errors(form.gondviselo_neve_szab) }}
            {{ form_widget(form.gondviselo_neve_szab, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">10. A gondviselő fogl. (szab.):</label>
        <div class="controls">
            {{ form_errors(form.gondviselo_fogl_szab) }}
            {{ form_widget(form.gondviselo_fogl_szab, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">11. A gondviselő állap., fogl., viszony (írva):</label>
        <div class="controls">
            {{ form_errors(form.gondviselo_allap_fogl_viszony_irva) }}
            {{ form_widget(form.gondviselo_allap_fogl_viszony_irva, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">12. Lakhely, lakcím utca (szab.):</label>
        <div class="controls">
            {{ form_errors(form.lakhely_lakcim_utca_szab) }}
            {{ form_widget(form.lakhely_lakcim_utca_szab, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">13. Lakhely, lakcím utca (írva):</label>
        <div class="controls">
            {{ form_errors(form.lakhely_lakcim_utca_irva) }}
            {{ form_widget(form.lakhely_lakcim_utca_irva, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">14. Lakhely házszám:</label>
        <div class="controls">
            {{ form_errors(form.hazszam) }}
            {{ form_widget(form.hazszam, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">15. Anyanyelve:</label>
        <div class="controls">
            {{ form_errors(form.anyanyelve) }}
            {{ form_widget(form.anyanyelve, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">16. Vallása:</label>
        <div class="controls">
            {{ form_errors(form.vallasa_rk) }}
            {{ form_errors(form.vallasa_ref) }}
            {{ form_errors(form.vallasa_ev) }}
            {{ form_errors(form.vallasa_izr) }}
            {{ form_errors(form.vallasa_ao) }}
            {{ form_errors(form.vallasa_c) }}

            <label for="veml_torzslapbundle_torzslap3type_vallasa_rk">Rk:</label>{{ form_widget(form.vallasa_rk) }}
            <label for="veml_torzslapbundle_torzslap3type_vallasa_ref">Ref:</label>{{ form_widget(form.vallasa_ref) }}
            <label for="veml_torzslapbundle_torzslap3type_vallasa_ev">Ev:</label>{{ form_widget(form.vallasa_ev) }}
            <label for="veml_torzslapbundle_torzslap3type_vallasa_izr">Izr:</label>{{ form_widget(form.vallasa_izr) }}
            <label for="veml_torzslapbundle_torzslap3type_vallasa_ao">AO:</label>{{ form_widget(form.vallasa_ao) }}
            <label for="veml_torzslapbundle_torzslap3type_vallasa_c">C:</label>{{ form_widget(form.vallasa_c) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">17. Osztálya:</label>
        <div class="controls">
            {{ form_errors(form.osztalya_1) }}
            {{ form_errors(form.osztalya_2) }}
            {{ form_errors(form.osztalya_3) }}
            {{ form_errors(form.osztalya_4) }}

            <label for="veml_torzslapbundle_torzslap3type_osztalya_1">I.</label>{{ form_widget(form.osztalya_1) }}
            <label for="veml_torzslapbundle_torzslap3type_osztalya_2">II.</label>{{ form_widget(form.osztalya_2) }}
            <label for="veml_torzslapbundle_torzslap3type_osztalya_3">III.</label>{{ form_widget(form.osztalya_3) }}
            <label for="veml_torzslapbundle_torzslap3type_osztalya_4">IV.</label>{{ form_widget(form.osztalya_4) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">18. Előtte:</label>
        <div class="controls">
            {{ form_errors(form.elotte) }}
            {{ form_widget(form.elotte, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">19. További egykorú adat:</label>
        <div class="controls">
            {{ form_errors(form.tovabbi_egykoru_adat) }}
            {{ form_widget(form.tovabbi_egykoru_adat, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">20. Megjegyzések:</label>
        <div class="controls">
            {{ form_errors(form.megjegyzesek) }}
            {{ form_widget(form.megjegyzesek, {'attr': {'class': 'span4'}}) }}
        </div>
    </div>

    {{ form_widget(form) }}

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Mentés</button>
        <a href="{{ path('3_sz_torzslap') }}" class="btn">
            Vissza a listához
        </a>
    </div>
</form>
{% endblock %}